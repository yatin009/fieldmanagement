    "express": "^4.15.3",
    "helmet": "^3.6.1",
    "mongoose": "^4.11.3",
    "morgan": "^1.8.2",
    "pug": "^2.0.0-rc.2",
    "serve-favicon": "^2.4.3"
  }
}
